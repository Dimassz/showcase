<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
   <%- include('partials/navbar') %>

   <!-- Carousel Start -->
<div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel"  style="padding-top: 100px;">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="2000">
                <img src="image/carousel-1.jpg" class="d-block w-100" alt="Never Just One Thing">
               
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="image/carousel-2.jpg" class="d-block w-100" alt="Denim Deals">
                <div class="carousel-caption d-none d-md-block text-start" style="left: 5%; bottom: auto; top: 35%;">
                    <h3 style="color: white; font-size: 3.5em; font-weight: bold;">denim deals</h3>
                    <p style="color: white; font-size: 1.5em;">from IDR 129.000</p>
                    <a href="#" class="btn btn-outline-light mt-3" style="border: none; text-decoration: underline; font-size: 1.2em;">SHOP NOW</a>
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="image/carousel-3.jpg" class="d-block w-100" alt="Never Just One Thing">
               
            </div>
        </div>
       
    </div>
<!-- Carousel End -->

<!-- Home Page Section Start -->

<div class="product-container" >
    <div class="product-content">

        <% let count = 0 %>
        <%clothes.forEach(item=>{%>
            <% if (count < 12 ) {%>
                <div class="product-box" 
                data-aos="fade-up"
                data-aos-easing="linear"
                 data-aos-duration="1000" 
                 onclick="window.location.href='product/<%=item.slug%>';">
                        <div class="product-preview">
                            <div class="product-image">
                                <img class="default-image" src="image/product/<%=item.picture[0]%>" alt="Product">
                                <img class="hover-img" src="image/product/<%=item.picture[1]%>" alt="Product Hover">
                            </div>
                            <div class="product-details">
                                <p><%=item.name%></p>
                                <p>Rp<%=item.formattedPrice%></p>
                            </div>
                        </div>
                    </div>
            <% count ++%>
           <% } %>
             
       <% }) %>
    </div>
</div>

<p  style="margin: auto; margin-top: 50px; padding: 7px 20px 7px 20px; border: 1px solid black; width: fit-content;background-color: black; color: white; font-size: 10px;letter-spacing: 2px; cursor: pointer;" onclick="window.location.href='/catalog';">VIEW ALL</p>


<!-- CTA -->
 <div class="cta-container">
    <div class="cta-content">
        <div class="cta-text">
            <p style="font-size: 36px;">Mystery Boxes Available Now!</p>
            <p>Shop now before they're gone!</p>
            <p>SHOP NOW</p>
        </div>
        <div class="cta-image">
            <img src="image/hero-1.webp">
        </div>
    </div>
 </div>

 <!-- Footer -->
  <%- include('partials/Footer') %>




   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
   <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
   <script>
    AOS.init({
    once: true 
  });
</script>
</body>
</html>