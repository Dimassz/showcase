generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model catalog {
  id        Int      @id @default(autoincrement())
  name      String   @unique(map: "Catalog_name_key")
  price     Int
  details   Json?
  size      Json?
  picture   Json
  createdAt DateTime @default(now())
  published Boolean  @default(false)
  slug      String   @unique
  category  Json?
  sale      Boolean  @default(false)
}

model user {
  id       Int    @id @default(autoincrement())
  email    String @unique(map: "User_email_key")
  name     String
  password String
}
